<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://wixtoolset.org/schemas/v4/wxs">

  <?define Sapi5VoiceImplClsid = "3d8f5c5d-9d6b-4b92-a12b-1a6dff80b6b2" ?>
  <?define ISapi5VoiceInterfaceId = "74c1c045-6e6a-4623-9735-2326a149af54" ?>
  <?define OpenSpeechTTSComponentGuid = "480e8975-0ba1-4b55-bf51-7dc20c7a299e" ?>
  <?define TTSInstallerComponentGuid = "7cd5a3c9-fa5e-4164-9e0b-c536fa97761f" ?>

  <Package Name="TTS Installer" Manufacturer="OpenAssistive" Version="1.0.0.0" UpgradeCode="52a9869a-b430-475f-909c-1db058ef74f9" InstallScope="perMachine">
    <Property Id="RegAsmPath" Value="C:\Windows\Microsoft.NET\Framework64\v4.0.30319\regasm.exe" />

    <!-- Directory Structure -->
    <Directory Id="ProgramFilesFolder">
      <Directory Id="INSTALLFOLDER" Name="OpenAssistive">
        <Directory Id="OpenSpeechFolder" Name="OpenSpeech">
          <ComponentGroupRef Id="ProductComponents" />
        </Directory>
      </Directory>
    </Directory>

    <!-- Custom Actions for COM Registration -->
    <CustomAction Id="RegisterCOM" ExeCommand="[RegAsmPath] &quot;[INSTALLFOLDER]OpenSpeechTTS.dll&quot; /codebase /tlb" Execute="deferred" />
    <CustomAction Id="UnregisterCOM" ExeCommand="[RegAsmPath] &quot;[INSTALLFOLDER]OpenSpeechTTS.dll&quot; /unregister" Execute="deferred" />

    <!-- Sequence of Actions -->
    <InstallExecuteSequence>
      <Custom Action="RegisterCOM" After="InstallFiles" />
      <Custom Action="UnregisterCOM" Before="RemoveFiles" />
    </InstallExecuteSequence>

    <!-- Feature to Install Components -->
    <Feature Id="MainFeature" Title="TTS Installer" Level="1">
      <ComponentGroupRef Id="ProductComponents" />
    </Feature>
  </Package>

  <Fragment>
    <ComponentGroup Id="ProductComponents">
      <Component Id="TTSInstallerExe" Guid="$(var.TTSInstallerComponentGuid)">
        <File Source="bin\Release\net6.0-windows\win-x64\publish\TTSInstaller.exe" />
      </Component>
      <Component Id="OpenSpeechTTSDll" Guid="$(var.OpenSpeechTTSComponentGuid)">
        <File Source="bin\Release\net6.0-windows\win-x64\publish\OpenSpeechTTS.dll" />
      </Component>
    </ComponentGroup>
  </Fragment>
</Wix>
